    <link href="http://yoursite.com/2020/02/16/%E5%B8%A6%E4%BD%A0%E8%B5%B0%E8%BF%9BHTML/"/>
    <id>http://yoursite.com/2020/02/16/%E5%B8%A6%E4%BD%A0%E8%B5%B0%E8%BF%9BHTML/</id>
