    <link href="http://yoursite.com/2020/02/18/HTML%E4%B9%8B%E8%A1%A8%E5%8D%95%E8%AF%A6%E8%A7%A3/"/>
    <id>http://yoursite.com/2020/02/18/HTML%E4%B9%8B%E8%A1%A8%E5%8D%95%E8%AF%A6%E8%A7%A3/</id>
